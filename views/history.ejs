<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ccc;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .delete-btn {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h2>User Booking History</h2>
    <table>
        <thead>
            <tr>
                <th>Car Brand</th>
                <th>Car Model</th>
                <th>Price</th>
                <th>Action</th> <!-- New column for delete button -->
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < userHistory.length; i++) { %>
                <tr>
                    <td><%= userHistory[i].carBrand %></td>
                    <td><%= userHistory[i].carModel %></td>
                    <td>$ <%= userHistory[i].price.toLocaleString() %></td>
                    <td>
                        <form action="/deletebooking" method="post">
                            <input type="hidden" name="email" value="<%= userHistory[i].email %>">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
